<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    android:orientation="vertical"
    android:weightSum="21.5"
    tools:context=".GestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center">

        <TextView
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontFamily="@font/war" />

        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontFamily="@font/war" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.25"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/rCard_opnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true" />

        <ListView
            android:id="@+id/gCard_opnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true" />

        <ListView
            android:id="@+id/wCard_opnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true" />

        <ListView
            android:id="@+id/bCard_opnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true" />

        <ListView
            android:id="@+id/yCard_opnt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:stackFromBottom="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/gScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/wScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/bScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/yScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/tScore_opnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="12sp"
            app:fontFamily="@font/typo_ssangmundongb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/redcard"
            android:enabled="false"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="@color/white2"
            app:fontFamily="@font/classic" />

        <Button
            android:id="@+id/gBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:background="@drawable/greencard"
            android:enabled="false"
            android:text=""
            android:textColor="@color/white2"
            app:fontFamily="@font/classic" />

        <Button
            android:id="@+id/wBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="bottom|right"
            android:layout_weight="1"
            android:background="@drawable/whitecard"
            android:enabled="false"
            android:text=""
            android:textColor="@color/white2"
            app:fontFamily="@font/classic" />

        <Button
            android:id="@+id/bBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:background="@drawable/bluecard"
            android:enabled="false"
            android:text=""
            android:textColor="@color/white2"
            app:fontFamily="@font/classic" />

        <Button
            android:id="@+id/yBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:background="@drawable/yellowcard"
            android:enabled="false"
            android:text=""
            android:textColor="@color/white2"
            app:fontFamily="@font/classic" />

        <Button
            android:id="@+id/deckBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/d_back"
            android:enabled="false"
            android:text=""
            android:textColor="@color/white2"
            android:textSize="20sp"
            app:fontFamily="@font/classic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/gScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/wScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/bScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/yScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="10sp"
            app:fontFamily="@font/typo_ssangmundongb" />

        <TextView
            android:id="@+id/tScore_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white2"
            android:textSize="12sp"
            app:fontFamily="@font/typo_ssangmundongb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.25"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/rCard_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <ListView
            android:id="@+id/gCard_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <ListView
            android:id="@+id/wCard_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <ListView
            android:id="@+id/bCard_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <ListView
            android:id="@+id/yCard_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:weightSum="2">

        <GridView
            android:id="@+id/myDeckBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="8"
            android:stretchMode="columnWidth" />
    </LinearLayout>
</LinearLayout>